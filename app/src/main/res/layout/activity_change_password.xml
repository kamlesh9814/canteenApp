<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePasswordActivity">

    <ImageView
        android:id="@+id/BackIV"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/black_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/TitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/change_password"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="@+id/BackIV"
        app:layout_constraintStart_toEndOf="@+id/BackIV"
        app:layout_constraintTop_toTopOf="@+id/BackIV" />

    <TextView
        android:id="@+id/OldPasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/old_password"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackIV" />


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/cornours_drawable"
        android:fontFamily="@font/poppins_medium"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingStart="50dp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="50dp"
        android:paddingBottom="@dimen/_5sdp"
        android:hint="@string/enter_old_password"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/OldPasswordTV" />

    <ImageView
        android:id="@+id/passwordIV"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:src="@drawable/password"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"
        app:layout_constraintStart_toStartOf="@+id/etPassword"
        app:layout_constraintTop_toTopOf="@+id/etPassword" />


    <ImageView
        android:id="@+id/eye_closeIV"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/eye_close"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"
        app:layout_constraintEnd_toEndOf="@+id/etPassword"
        app:layout_constraintTop_toTopOf="@+id/etPassword" />

    <TextView
        android:id="@+id/NewPasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/enter_new_password"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />


    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/cornours_drawable"
        android:fontFamily="@font/poppins_medium"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingStart="50dp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="50dp"
        android:paddingBottom="@dimen/_5sdp"
        android:hint="Enter New Password"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/NewPasswordTV" />

    <ImageView
        android:id="@+id/passwordIV1"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:src="@drawable/password"
        app:layout_constraintBottom_toBottomOf="@+id/etNewPassword"
        app:layout_constraintStart_toStartOf="@+id/etNewPassword"
        app:layout_constraintTop_toTopOf="@+id/etNewPassword" />


    <ImageView
        android:id="@+id/eye_closeIV1"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/eye_close"
        app:layout_constraintBottom_toBottomOf="@+id/etNewPassword"
        app:layout_constraintEnd_toEndOf="@+id/etNewPassword"
        app:layout_constraintTop_toTopOf="@+id/etNewPassword" />


    <TextView
        android:id="@+id/REEnterPasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/re_enter_new_password"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNewPassword" />


    <EditText
        android:id="@+id/etReEnterNewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/cornours_drawable"
        android:fontFamily="@font/poppins_medium"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingStart="50dp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="50dp"
        android:paddingBottom="@dimen/_5sdp"
        android:hint="Re Enter New Password"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/REEnterPasswordTV" />

    <ImageView
        android:id="@+id/passwordIV2"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:src="@drawable/password"
        app:layout_constraintBottom_toBottomOf="@+id/etReEnterNewPassword"
        app:layout_constraintStart_toStartOf="@+id/etReEnterNewPassword"
        app:layout_constraintTop_toTopOf="@+id/etReEnterNewPassword" />


    <ImageView
        android:id="@+id/eye_closeIV2"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/eye_close"
        app:layout_constraintBottom_toBottomOf="@+id/etReEnterNewPassword"
        app:layout_constraintEnd_toEndOf="@+id/etReEnterNewPassword"
        app:layout_constraintTop_toTopOf="@+id/etReEnterNewPassword" />

    <TextView
        android:id="@+id/signUpLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/cornours_drawable"
        android:backgroundTint="@color/red_color"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etReEnterNewPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>